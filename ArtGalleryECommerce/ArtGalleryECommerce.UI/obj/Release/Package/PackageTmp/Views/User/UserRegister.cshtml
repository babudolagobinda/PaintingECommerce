@model ArtGalleryECommerce.UI.Models.UserSignUpModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Chandni Creative Art</title>
    <link rel="icon" href="~/fonts/LogoPrefinal6.jpg" type="image/x-icon">
    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Hind:400,700" rel="stylesheet">
    <!-- Bootstrap -->
    <link href="~/UserTemplate/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="~/UserTemplate/css/font-awesome.min.css">
    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="~/UserTemplate/css/style.css" />
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
              <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
              <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
            <![endif]-->
    <style>
        form label {
            display: inline-block;
            width: 100px;
        }

        form div {
            margin-bottom: 10px;
        }

        .error {
            color: red;
            margin-left: 5px;
        }

        label.error {
            display: inline;
        }
    </style>
</head>
<body class="login-page">
    <div class="login-box">
        @*<div class="login-logo"> <a href="#"><img src="../fonts/logo.jpg" height="100" width="100" /></a> </div>*@
        <!-- /.login-logo -->
        <ul class="nav nav-pills nav-justified">
            <li><a href="@Url.Action("UserLogin","User")">Login</a></li>
            <li class="active"><a href="@Url.Action("UserRegister","User")">Register</a></li>
        </ul>

        <div class="register-box-body">
            <p class="login-box-msg">New Register</p>
            @using (Html.BeginForm("UserRegister", "User", FormMethod.Post))
            {
                <form action="#">
                    <div class="form-group has-feedback">
                        @Html.TextBox("Name", "", new { @class = "form-control", @placeholder = "Enter Your Name" })
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group has-feedback">
                        @Html.TextBox("EmailId", "", new { @class = "form-control", @placeholder = "Enter Your EmailId" })
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                        @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group has-feedback">
                        @Html.Password("Password", "", new { @class = "form-control", @placeholder = "Enter Your Password" })
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group has-feedback">
                        @Html.Password("ConfirmPassword", "", new { @class = "form-control", @placeholder = "Enter Your Confirm Password" })
                        <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group has-feedback">
                        @Html.TextBox("MobileNo", "", new { @class = "form-control", @placeholder = "Enter Your MobileNo" })
                        <span class="glyphicon glyphicon-phone form-control-feedback"></span>
                        @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group has-feedback">
                        @Html.DropDownListFor(m => m.Gender, new List<SelectListItem>
                               { new SelectListItem{Text="Male", Value="M"},
                                 new SelectListItem{Text="Female", Value="F"}}, "Select Gender", new { @class = "form-control" })
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                        @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                            <div class="checkbox icheck">
                                <label class="checkbox-inline" style="width:100%;">
                                    <input type="checkbox" value="">
                                    I agree to the <a href="#">terms</a>
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-xs-4 mb3">
                            <button type="submit" class="btn btn-primary btn-block btn-flat" id="btnRegister">Register</button>
                        </div>
                        @if (ViewBag.successText != null || ViewBag.successText != "")
                        {
                            <div class="tx-info tx-12 d-block mg-t-10 text-success">@ViewBag.successText</div>
                        }
                        @if (ViewBag.failureText != null || ViewBag.failureText != "")
                        {
                            <div class="tx-info tx-12 d-block mg-t-10 text-danger">@ViewBag.failureText</div>
                        }
                        <!-- /.col -->
                    </div>
                </form>
            }
            <div class="social-auth-links text-center">
                <a href="@Url.Action("UserLogin","User")" class="text-center">I already have a membership</a>
            </div>
        </div>
    </div>
  




    <!-- FOOTER -->
    <footer id="footer" class="section-grey" style="position: fixed; bottom: 0; width: 100%; z-index:99;">
        <!-- container -->
        <div class="container text-center">
            <div class="footer"> Copyright &copy; 2020 All rights reserved</div>
        </div>
        <!-- /container -->
    </footer>
    <!-- /FOOTER -->
    <!-- jQuery Plugins -->
    <script src="~/UserTemplate/js/jquery.min.js"></script>
    <script src="~/UserTemplate/js/bootstrap.min.js"></script>
    @*<script src="~/CustomScripts/UserSignUp.js"></script>*@
</body>
</html>
