@model IEnumerable<ArtGalleryECommerce.Model.UserDTO.ProductListDto>

@{
    if (Model != null && Model.Count() != 0)
    {
        <!-- BREADCRUMB -->
        <div id="breadcrumb">
            <div class="container">
                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li class="active">Cart</li>
                </ul>
            </div>
        </div>
        <!-- /BREADCRUMB -->
        <!-- section -->

        <div class="section">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="order-summary clearfix">
                            <div class="section-title">
                                <h3 class="title">Order Review</h3>
                            </div>
                            <table class="shopping-cart-table table">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th></th>
                                        <th class="text-center">Price</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-center">Total</th>
                                        <th class="text-right">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{decimal total = 0;}
                                    @if (Model != null)
                                    {

                                        foreach (var item in Model)
                                        {
                                            if (item.ItemId > 0)
                                            {
                                                total += @item.Price;
                                                <tr>
                                                    <td class="thumb"><img src="~/UploadImages/@item.ItemImage" alt=""></td>
                                                    <td class="details">
                                                        <a href="#">@item.ItemName</a>
                                                        <ul>
                                                            <li><span>Size: @item.Width * @item.Height</span></li>
                                                            <li><span>Color: Camelot</span></li>
                                                        </ul>
                                                    </td>
                                                    <td class="price text-center">
                                                        <strong>Rs. @item.Price</strong><br>
                                                        <del class="font-weak"><small>Rs. @item.Mrp</small></del>
                                                    </td>
                                                    <td class="qty text-center"><input class="input" type="text" readonly value="1"></td>
                                                    <td class="total text-center"><strong class="primary-color">  @item.Price</strong></td>
                                                    <td class="text-right"><button class="main-btn icon-btn" onclick="RemoveItem(@item.ItemId)"><i class="fa fa-close"></i></button></td>
                                                </tr>
                                            }

                                        }
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th class="empty" colspan="3"></th>
                                        <th>SUBTOTAL</th>
                                        <th colspan="2" class="sub-total">Rs. @total</th>
                                    </tr>
                                    <tr>
                                        <th class="empty" colspan="3"></th>
                                        <th>SHIPING</th>
                                        <td colspan="2">Free Shipping</td>
                                    </tr>
                                    <tr>
                                        <th class="empty" colspan="3"></th>
                                        <th>TOTAL</th>
                                        <th colspan="2" class="total">Rs. @total</th>
                                    </tr>
                                </tfoot>
                            </table>
                            <div class="pull-right">
                                <button class="primary-btn"><a href="@Url.Action("UserCheckOut","User")">Checkout</a></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /section -->
    }
    else
    {
        <section id="cover">
            <div id="cover-caption">
                <div id="container" class="container">
                    <div class="row">
                        <div class="col-sm-12 offset-sm-1 text-center">
                            <img src="~/fonts/emptyBag2.gif" height="300" width="300" />
                            <h3>Hey, it feels so light!</h3>
                            <h5>There is nothing in your bag. Let's add some items. <a href="#nav-main" class="btn btn-secondary-outline btn-sm" role="button">↓</a></h5>
                            @*<div class="info-form">
                                    <form action="" class="form-inline justify-content-center">
                                        <div class="form-group">
                                            <label class="sr-only">Name</label>
                                            <input type="text" class="form-control" placeholder="Jane Doe">
                                        </div>
                                        <div class="form-group">
                                            <label class="sr-only">Email</label>
                                            <input type="text" class="form-control" placeholder="jane.doe@example.com">
                                        </div>
                                        <button type="submit" class="btn btn-success ">okay, go!</button>
                                    </form>
                                </div>*@
                            @*<div class="info-form">
                                <h3>Hey, it feels so light!</h3>
                                <h5>There is nothing in your bag. Let's add some items.</h5>
                            </div>*@
                            <br>

                           
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }

}


